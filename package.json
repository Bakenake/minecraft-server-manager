{
  "name": "craftos-server-manager",
  "version": "1.0.0-beta.3",
  "description": "Professional Minecraft Server Manager with modern dashboard UI",
  "private": true,
  "main": "electron/main.js",
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run dev --workspace=backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=backend && npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "build:frontend": "npm run build --workspace=frontend",
    "start": "npm run start --workspace=backend",
    "lint": "npm run lint --workspace=backend && npm run lint --workspace=frontend",
    "electron:dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build && electron-builder --config electron-builder.json",
    "electron:build:win": "npm run build && electron-builder --config electron-builder.json --win",
    "electron:build:mac": "npm run build && electron-builder --config electron-builder.json --mac",
    "electron:build:linux": "npm run build && electron-builder --config electron-builder.json --linux",
    "electron:publish": "npm run build && electron-builder --config electron-builder.json --publish always",
    "release": "node scripts/release.js",
    "release:patch": "node scripts/release.js patch",
    "release:minor": "node scripts/release.js minor",
    "release:major": "node scripts/release.js major",
    "package:win": "node scripts/package-win.js",
    "package:mac": "node scripts/package-mac.js",
    "package:linux": "node scripts/package-linux.js",
    "db:migrate": "npm run db:migrate --workspace=backend",
    "db:seed": "npm run db:seed --workspace=backend"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "electron-updater": "^6.3.9",
    "electron-log": "^5.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bakenake/minecraft-server-manager.git"
  }
}
