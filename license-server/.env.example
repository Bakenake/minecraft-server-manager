# ─── CraftOS License Server Configuration ───────────────────
# Copy to .env and fill in your values

# Server
PORT=443
HOST=0.0.0.0

# Admin API authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-me-to-a-strong-password

# JWT for admin sessions
JWT_SECRET=change-me-to-a-64-char-random-string-for-signing-admin-tokens

# Database
DB_PATH=./data/licenses.db

# HTTPS (required for production)
HTTPS_ENABLED=true
HTTPS_CERT_PATH=/etc/letsencrypt/live/api.craftos.app/fullchain.pem
HTTPS_KEY_PATH=/etc/letsencrypt/live/api.craftos.app/privkey.pem

# Rate limiting
RATE_LIMIT_VALIDATE_MAX=30
RATE_LIMIT_VALIDATE_WINDOW_MS=60000
RATE_LIMIT_ADMIN_MAX=60
RATE_LIMIT_ADMIN_WINDOW_MS=60000

# Allowed origins (comma-separated, for CORS)
ALLOWED_ORIGINS=https://craftos.app

# Logging
LOG_LEVEL=info
