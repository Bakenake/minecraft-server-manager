# ─── Server ───────────────────────────────────────────────
PORT=3001
HOST=0.0.0.0

# ─── Security ─────────────────────────────────────────────
JWT_SECRET=change-me-to-a-random-64-char-string
JWT_EXPIRY=24h
BCRYPT_ROUNDS=12

# ─── Database ─────────────────────────────────────────────
# sqlite (default) or postgresql
DB_TYPE=sqlite
DB_PATH=./data/craftos.db

# PostgreSQL (if DB_TYPE=postgresql)
# DATABASE_URL=postgresql://user:pass@localhost:5432/craftos

# ─── Paths ────────────────────────────────────────────────
SERVERS_DIR=./servers
BACKUPS_DIR=./backups
LOGS_DIR=./logs

# ─── Features ─────────────────────────────────────────────
ENABLE_TELEMETRY=false
ENABLE_AUTO_UPDATE=true
ENABLE_2FA=true

# ─── Rate Limiting ───────────────────────────────────────
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# ─── Defaults ────────────────────────────────────────────
DEFAULT_MIN_RAM=1024
DEFAULT_MAX_RAM=4096
DEFAULT_JAVA_PATH=java
